{
   "compilerOptions": {
      "lib": [
         "es6"
      ],
      "types": ["node", "mocha", "jest"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
         "imports/*": ["./src/imports/*"]
      }
   },
   "exclude": [
      "src/imports/database/migration",
      "src/imports/database/seeds",
      "tests/**/*.ts"
   ]
}
